<LinearLayout android:id="@+id/linear_layout"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_purple"
              android:orientation="horizontal"
              android:padding="@dimen/dp_5">

    <ImageView
        android:id="@+id/image_album_art"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_songs"/>

    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="@dimen/dp_170"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_songs_title"
            style="@style/TextPlaySongsConTrol"/>

        <TextView
            android:id="@+id/text_artist_name"
            style="@style/TextPlaySongsConTrol"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_play_previous"
            style="@style/ImageButtonPlaysongsControl"
            android:src="@android:drawable/ic_media_previous"/>

        <ImageButton
            android:id="@+id/image_play_pause"
            style="@style/ImageButtonPlaysongsControl"
            android:src="@android:drawable/ic_media_play"/>

        <ImageButton
            android:id="@+id/image_play_next"
            style="@style/ImageButtonPlaysongsControl"
            android:src="@android:drawable/ic_media_next"/>
    </LinearLayout>

</LinearLayout>
